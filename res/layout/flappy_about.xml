<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/flappyAboutTitle"
        style="@style/AboutSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_title" />

    <TextView
        android:id="@+id/flappyAboutDesc"
        style="@style/AboutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_desc" />

    <TextView
        style="@style/AboutSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_stress_less_title" />

    <TextView
        style="@style/AboutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_stress_less_desc" />

    <TextView
        style="@style/AboutSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_disappear_message_title" />

    <TextView
        style="@style/AboutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_disappear_message_desc" />

    <TextView
        style="@style/AboutSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_merit_title" />

    <TextView
        style="@style/AboutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_merit_desc" />

    <TextView
        style="@style/AboutSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_start_title" />

    <TextView
        style="@style/AboutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_flappy_about_merit_desc" />

</LinearLayout>