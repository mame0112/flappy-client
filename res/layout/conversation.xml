<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/conversationListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:paddingBottom="@dimen/conversation_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:background="@drawable/flappy_conversation_message_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <EditText
                android:id="@+id/conversationEditText"
                style="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_padding_vertical"
                android:layout_marginRight="@dimen/default_padding_vertical"
                android:layout_weight="6"
                android:background="@drawable/message_edittext_frame"
                android:hint="@string/str_conversation_send_hint_text" />

            <Button
                android:id="@+id/conversationSendButton"
                style="@style/LcomNormalButtonTheme"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/signup_button"
                android:padding="0dp"
                android:text="@string/str_conversation_send_button"
                android:textColor="@drawable/normal_button_text" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>