<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<!-- 
    <com.mame.flappy.ui.view.FriendListCustomListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/friendListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
         -->
<ListView
        android:id="@+id/friendListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /> 

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/firstFriendAddText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_padding"
                android:text="@string/str_friendlist_first_add_text" />

            <Button
                android:id="@+id/firstFriendAddButton"
                style="@style/LcomNormalButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_padding"
                android:background="@drawable/normal_button"
                android:paddingLeft="@dimen/add_friend_padding"
                android:paddingRight="@dimen/add_friend_padding"
                android:text="@string/str_friendlist_first_add_button"
                android:textColor="@drawable/normal_button_text" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>